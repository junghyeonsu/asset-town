{
  "name": "@asset-town/figma-plugin",
  "license": "MIT",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "yarn build:ui && yarn build:plugin -- --minify",
    "build:plugin": "node ./esbuild.plugin.cjs",
    "build:ui": "yarn vite build --mode prod --minify esbuild --emptyOutDir=false",
    "dev": "concurrently \"yarn dev:ui\" \"yarn dev:plugin\"",
    "dev:plugin": "WATCH=true node ./esbuild.plugin.cjs",
    "dev:ui": "yarn vite build --mode dev --watch --emptyOutDir=false",
    "tsc": "yarn tsc:plugin && yarn tsc:ui",
    "tsc:plugin": "tsc --noEmit -p plugin",
    "tsc:ui": "tsc --noEmit -p ui-src"
  },
  "dependencies": {
    "@create-figma-plugin/utilities": "^3.1.0",
    "@lottiefiles/react-lottie-player": "^3.5.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@sanity/client": "^6.12.1",
    "@tanstack/react-query": "^5.17.19",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.317.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.8.9",
    "vite": "^5.0.12",
    "vite-plugin-singlefile": "^1.0.0"
  },
  "devDependencies": {
    "@asset-town/types": "^0.0.1",
    "@figma/plugin-typings": "^1.85.0",
    "@types/node": "^20.11.10",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1"
  }
}
